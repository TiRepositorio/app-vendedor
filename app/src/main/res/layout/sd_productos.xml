<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:gravity="center|center_vertical"
        android:padding="5dp"
        android:background="@color/fondoFooter"
        android:orientation="horizontal">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#AAAAAA"
            android:layout_margin="2dp"
            android:layout_weight="1.2">
            <Spinner
                android:id="@+id/spBuscar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"/>

        </androidx.gridlayout.widget.GridLayout>


        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:layout_margin="2dp"
            android:inputType="number"
            />

        <Button
            android:id="@+id/btBuscar"
            android:text="Buscar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:layout_margin="0dp"
            />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:text="Cod"
                    android:gravity="end|center_vertical"
                    style="@style/cabeceraSubTabla"/>
                <TextView
                    android:layout_width="250dp"
                    android:text="DescripciÃ³n"
                    android:gravity="start|center_vertical"
                    style="@style/cabeceraSubTabla"/>
                <TextView
                    android:layout_width="40dp"
                    android:text="UM"
                    android:gravity="end|center_vertical"
                    style="@style/cabeceraSubTabla"/>
                <TextView
                    android:layout_width="120dp"
                    android:text="Referencia"
                    android:gravity="start|center_vertical"
                    style="@style/cabeceraSubTabla"/>
                <TextView
                    android:layout_width="120dp"
                    android:text="Cod. de Barra"
                    android:gravity="end|center_vertical"
                    style="@style/cabeceraSubTabla"/>

            </LinearLayout>

            <ListView
                android:id="@+id/lvProductos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tial"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TextView
            android:text="Cod"
            android:layout_width="30dp"
            style="@style/textoEtiqueta"/>

        <EditText
            android:id="@+id/etDetCodArticulo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            style="@style/etDetalleNumeroDeshabilitado"/>

        <TextView
            android:text="UM"
            android:layout_width="30dp"
            style="@style/textoEtiqueta"/>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="#AAAAAA"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <Spinner
                android:id="@+id/spUM"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"/>
        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:layout_width="30dp"
            android:text="Can"
            style="@style/textoEtiqueta"/>

        <EditText
            android:id="@+id/etDetCantidad"
            android:hint="Cantidad"
            android:textColorHint="#FFF"
            android:layout_width="70dp"
            android:inputType="none"
            android:editable="false"
            android:text="0"
            style="@style/etDetalleNumeroHabilitado"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tial"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TextView
            android:text="Mot"
            android:layout_width="30dp"
            style="@style/textoEtiqueta"/>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="#AAAAAA"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <Spinner
                android:id="@+id/spMtivo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"/>
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Agregar"/>
        <Button
            android:id="@+id/btEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Enviar"/>
    </LinearLayout>

</LinearLayout>