<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".reportes.SeguimientoDeVisitas"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/fondoOscuro"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/barra_vendedores"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_weight="4"
                    android:text="Sem."
                    style="@style/cabeceraTabla"
                    />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_weight="1"
                    android:text="Periodo"
                    style="@style/cabeceraTabla"
                    />

            </LinearLayout>

            <ListView
                android:id="@+id/lvPeriodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:focusable="false"
            >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvd1"
                            style="@style/cabeceraTabla"
                            android:layout_width="70dp"
                            android:gravity="end"
                            android:text="Codigo" />

                        <TextView
                            android:id="@+id/tvd2"
                            style="@style/cabeceraTabla"
                            android:layout_width="280dp"
                            android:gravity="start"
                            android:text="Vendedor" />

                        <TextView
                            android:id="@+id/tvd3"
                            style="@style/cabeceraTabla"
                            android:layout_width="80dp"
                            android:gravity="end"
                            android:text="Cant." />

                        <TextView
                            android:id="@+id/tvd4"
                            style="@style/cabeceraTabla"
                            android:layout_width="80dp"
                            android:gravity="end"
                            android:text="Vta. Pres." />

                        <TextView
                            android:id="@+id/tvd5"
                            style="@style/cabeceraTabla"
                            android:layout_width="80dp"
                            android:gravity="end"
                            android:text="Vendido" />

                        <TextView
                            android:id="@+id/tvd6"
                            style="@style/cabeceraTabla"
                            android:layout_width="80dp"
                            android:gravity="end"
                            android:text="No venta" />

                        <TextView
                            android:id="@+id/tvd7"
                            style="@style/cabeceraTabla"
                            android:layout_width="80dp"
                            android:gravity="end"
                            android:text="No Aten." />

                        <TextView
                            android:id="@+id/tvd8"
                            style="@style/cabeceraTabla"
                            android:layout_width="80dp"
                            android:gravity="end"
                            android:text="Porc."
                            android:layout_weight="1"/>

                    </TableRow>

                    <ListView
                        android:id="@+id/lvVendedroes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>