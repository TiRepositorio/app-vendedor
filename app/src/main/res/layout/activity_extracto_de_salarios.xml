<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08080C"
    android:foregroundGravity="top|left|bottom|right"
    tools:context=".reportes.ExtractoDeSalario"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddd"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ddd"
                    android:src="@drawable/ic_dolar" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ddd"
                    android:padding="5dp"
                    android:text="Haberes"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/verdeApolo">

                            <TextView
                                android:layout_width="50dp"
                                android:text="Nro."
                                android:textAlignment="center"
                                style="@style/cabeceraTabla" />

                            <TextView
                                android:layout_width="230dp"
                                android:text="Concepto"
                                android:textAlignment="textStart"
                                style="@style/cabeceraTabla" />

                            <TextView
                                android:layout_width="120dp"
                                android:text="Total Venta"
                                android:textAlignment="textEnd"
                                style="@style/cabeceraTabla" />

                            <TextView
                                android:layout_width="120dp"
                                android:text="Total Comision"
                                android:textAlignment="textEnd"
                                style="@style/cabeceraTabla" />

                            <TextView
                                android:layout_width="120dp"
                                android:text="Monto"
                                android:textAlignment="textEnd"
                                style="@style/cabeceraTabla"/>

                        </TableRow>

                        <ListView
                            android:id="@+id/lvHaberes"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#888888">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="TOTAL HABERES"
                                android:textAlignment="textStart"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvHabTotalVenta"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAlignment="textEnd"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvHabTotalComision"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAlignment="textEnd"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvHabTotalMonto"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAlignment="textEnd"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </TableRow>


                    </TableLayout>

                </HorizontalScrollView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddd"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ddd"
                    android:src="@drawable/ic_dolar" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ddd"
                    android:padding="5dp"
                    android:text="Debitos"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/verdeApolo">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="#cc85C229"
                                android:padding="10dp"
                                android:text="Nro."
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:background="#cc85C229"
                                android:padding="10dp"
                                android:text="Concepto"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:background="#cc85C229"
                                android:padding="10dp"
                                android:text="Cuota"
                                android:textAlignment="textEnd"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:background="#cc85C229"
                                android:padding="10dp"
                                android:text="Monto"
                                android:textAlignment="textEnd"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <ListView
                            android:id="@+id/lvDebitos"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_weight="1" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#888888">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="TOTAL DEBITOS"
                                android:textAlignment="textStart"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAlignment="textEnd"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDebTotalMontoDebito"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Monto"
                                android:textAlignment="textEnd"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#6B0000">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="SALDO"
                                android:textAlignment="textStart"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textAlignment="textEnd"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDebTotalMontoSaldo"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Monto"
                                android:textAlignment="textEnd"
                                android:textColor="@color/textoClaro"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </TableRow>

                    </TableLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>