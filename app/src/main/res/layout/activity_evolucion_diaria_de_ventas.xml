<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondoOscuro"
    tools:context=".informes.EvolucionDiariaDeVentas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ddd">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_evol_diaria_venta"
            android:background="#ddd"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evolucion diaria de ventas"
            android:textStyle="bold"
            android:background="#ddd"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verdeApoloCabecera">

                    <TextView
                        android:id="@+id/tv1"
                        style="@style/cabeceraTabla"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="end" />

                    <TextView
                        android:id="@+id/tv2"
                        style="@style/cabeceraTabla"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Vendedor" />

                    <TextView
                        android:id="@+id/tv3"
                        style="@style/cabeceraTabla"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Ped.Ayer 2" />

                    <TextView
                        android:id="@+id/tv4"
                        style="@style/cabeceraTabla"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Ped.Ayer" />

                    <TextView
                        android:id="@+id/tv5"
                        style="@style/cabeceraTabla"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Tot. Pedido" />

                    <TextView
                        android:id="@+id/tv6"
                        style="@style/cabeceraTabla"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Tot. Facturado" />

                    <TextView
                        android:id="@+id/tv7"
                        style="@style/cabeceraTabla"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Meta" />

                    <TextView
                        android:id="@+id/tv8"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="%Mes" />

                    <TextView
                        android:id="@+id/tv9"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="%Proy." />

                    <TextView
                        android:id="@+id/tv10"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="%Reb." />

                    <TextView
                        android:id="@+id/tv11"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="%Dev." />

                    <TextView
                        android:id="@+id/tv12"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Total Cli." />

                    <TextView
                        android:id="@+id/tv13"
                        style="@style/cabeceraTabla"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Cli. c/ Venta" />

                    <TextView
                        android:id="@+id/tv14"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Cobertura" />

                    <TextView
                        android:id="@+id/tv15"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Ef. Visita" />

                    <TextView
                        android:id="@+id/tv16"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="DÃ­as Trab" />

                    <TextView
                        android:id="@+id/tv17"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="IPDV" />

                    <TextView
                        android:id="@+id/tv18"
                        style="@style/cabeceraTabla"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Surt. Efic." />

                </TableRow>

                <ListView
                    android:id="@+id/lvEvolucionDiariaDeVentas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>