<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoOscuro">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/accion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:autofillHints=""
                android:inputType="none"
                tools:ignore="LabelFor" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="ATENCION ESTE CLIENTE ESTA CADUCADO !!"
                android:textColor="@color/textoClaro"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Tel. 1:"
                    style="@style/tvOscuro"/>

                <EditText
                    android:id="@+id/etTel1"
                    android:layout_width="fill_parent"
                    android:layout_height="45sp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:textColor="@color/textoClaro"
                    android:inputType="phone"
                    android:singleLine="true" />

                <CheckBox
                    android:id="@+id/cbConfirmado1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Tel. 2:"
                    style="@style/tvOscuro"/>

                <EditText
                    android:id="@+id/etTel2"
                    android:layout_width="fill_parent"
                    android:layout_height="45sp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:textColor="@color/textoClaro"
                    android:inputType="phone"
                    android:singleLine="true" />

                <CheckBox
                    android:id="@+id/cbConfirmado2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Dir.:"
                    style="@style/tvOscuro"/>

                <EditText
                    android:id="@+id/etDireccion"
                    android:layout_width="fill_parent"
                    android:layout_height="45sp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:textColor="@color/textoClaro"
                    android:inputType="textFilter"
                    android:singleLine="true" />

                <CheckBox
                    android:id="@+id/cbConfirmado3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Cerca:"
                    style="@style/tvOscuro"/>

                <EditText
                    android:id="@+id/etCercaDe"
                    android:layout_width="fill_parent"
                    android:layout_height="45sp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:textColor="@color/textoClaro"
                    android:inputType="textFilter"
                    android:singleLine="true" />

                <CheckBox
                    android:id="@+id/cbConfirmado4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="3sp"
                android:orientation="vertical"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivFachada"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:gravity="center_horizontal|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnAceptar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aceptar" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancelar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>