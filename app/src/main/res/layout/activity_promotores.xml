<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/contMenu"
    android:fitsSystemWindows="true"
    tools:context=".ventas.Promotores"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/fondoOscuro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                layout="@layout/barra_vendedores"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="60dp"
                        android:text="Sup."
                        android:gravity="end"
                        style="@style/cabeceraTabla"
                        />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="70dp"
                        android:text="Cod."
                        android:gravity="end"
                        style="@style/cabeceraTabla"
                        />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="match_parent"
                        android:text="Descripcion"
                        android:layout_weight="1"
                        android:gravity="start"
                        style="@style/cabeceraTabla"
                        />

                </TableRow>

                <ListView
                    android:id="@+id/lvPromotores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="@color/textoClaro"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/btRealizar"
            android:text="Realizar Venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="12dp"
            android:textColor="@color/textoClaro"
            android:background="@color/verdeOscuro"/>
        <Button
            android:id="@+id/btConsultar"
            android:text="Consultar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="12dp"
            android:background="@color/quantum_deeporange900"
            android:textColor="@color/textoClaro"/>
        <Button
            android:id="@+id/btSalir"
            android:text="Salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="12dp"
            android:background="@color/fondoFooter"
            android:textColor="@color/textoClaro"/>

    </LinearLayout>


</LinearLayout>