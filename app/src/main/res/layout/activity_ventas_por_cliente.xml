<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/contMenu"
    android:fitsSystemWindows="true"
    tools:context=".reportes.VentasPorCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/barra_vendedores"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="Cliente"
                        android:layout_width="580dp"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/tvMes1"
                        android:layout_width="180dp"
                        android:text="DÃ­a"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tvMes2"
                        android:layout_width="260dp"
                        android:text="Fec. visita"
                        style="@style/cabeceraSubTabla"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="80dp"
                        android:text="Codigo"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="200dp"
                        android:text="Cliente"
                        android:gravity="start|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="120dp"
                        android:text="Ciudad"
                        android:gravity="start|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="60dp"
                        android:text="Lista"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="120dp"
                        android:text="Mayor venta"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="120dp"
                        android:text="Venta"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="60dp"
                        android:text="Mix"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="120dp"
                        android:text="Venta"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="60dp"
                        android:text="Mix"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tv10"
                        android:layout_width="80dp"
                        android:text="Surt. Efi."
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/lvVentasPorCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="Totales:"
                        android:layout_width="80dp"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tvCobertura"
                        android:layout_width="200dp"
                        android:text="Totales:"
                        android:gravity="start|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:layout_width="120dp"
                        android:gravity="start|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:layout_width="60dp"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tvMayorVenta"
                        android:layout_width="120dp"
                        android:text="Mayor venta"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tvVenta3"
                        android:layout_width="120dp"
                        android:text="Venta"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tvMix3"
                        android:layout_width="60dp"
                        android:text="Mix"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tvVenta4"
                        android:layout_width="120dp"
                        android:text="Venta"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tvMix4"
                        android:layout_width="60dp"
                        android:text="Mix"
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                    <TextView
                        android:id="@+id/tvSurtidoEficiente"
                        android:layout_width="80dp"
                        android:text="Surt. Efi."
                        android:gravity="end|center_vertical"
                        style="@style/cabeceraSubTabla"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/barraMenu"
        android:background="#ffffff"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:elevation="20dp"
        app:headerLayout="@layout/menu_supervisores"
        app:menu="@menu/drawer_menu_vendedores"
        >


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>